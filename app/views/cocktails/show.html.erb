<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 ">
      <h1><%= @cocktail.name %></h1>
    </div>


    <div class="col-xs-12 col-sm-12">
      <h3>Doses:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %>: <%= dose.ingredient.name %>
            ----
            <%= link_to 'delete', dose_path(dose), method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-12 col-sm-12 col-sm-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>
    </div>


    <%= link_to 'Back', cocktails_path %>
    </div>
    <%= cl_image_tag @cocktail.picture.path, height: 300, width: 400, crop: :fill %>
    <%= cl_image_tag("qgdab1zvfyz1xg9uzsvy",
      width: 400, height: 300, crop: :fill) %>



  </div>
</div>
